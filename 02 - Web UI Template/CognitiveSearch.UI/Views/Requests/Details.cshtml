

@{
    ViewData["Title"] = "FOIA Requests";
}

<div class="container-fluid">
    <div class="row" style="padding-top:20px;padding-bottom:20px;">
        <div class="col-sm-1"></div>
        <div class="col-sm-10">
            <div id="tabstrip" class="mt-3" style="position:relative;">
                <ul>
                    <li class="k-state-active">
                        <i class="far fa-list-alt mr-1"></i>
                        FOIA Request
                    </li>
                    <li>
                        <i class="fas fa-plus-circle mr-1"></i>
                        Saved Searches
                    </li>
                    <li>
                        <i class="fas fa-file-invoice mr-1"></i>
                        Responsive Documents
                    </li>
                    <li>
                        <i class="fas fa-file-medical-alt mr-1"></i>
                       Log
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-sm-1"></div>
    </div>
</div>

<script>
    $(document).ready(function () {

        var onSelect = function (e) {
            //display loading message on the first load because it takes the longest.
            $("#divLoadingTabStrip").show();

            // detach select event handler via unbind() - no message needed because subsequent loads will be faster
            tabStrip.unbind("select", onSelect);
        };

        var tabStrip = $("#tabstrip").kendoTabStrip({
            animation: false,
            select: onSelect,
            contentUrls: [
                '@Url.Action("FOIARequest", "Requests", null)',
                '@Url.Action("SavedSearches", "Requests", null)',
                '@Url.Action("ResponsiveDocuments", "Requests", null)',
                '@Url.Action("Log", "Requests", null)'
            ]
        }).data("kendoTabStrip");
    });


</script>

